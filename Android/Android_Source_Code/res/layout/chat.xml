<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datelayout"
        android:visibility="gone"
        android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/datetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="오후 2:13 "
        android:textColor="#000000"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/otherUserLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_account_circle_blue_24dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameTextView"
                android:textColor="#000000"
                android:text="임선우"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:padding="3dp"
                android:id="@+id/commentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:background="#ffff"
            android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후 2:13 "
                    android:textColor="#000000"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/count"
                    android:layout_marginLeft="3dp"
                    android:text="1"
                    android:textColor="#ff6"/>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="3dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:id="@+id/myLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mycount"
                android:text="1"
                android:layout_marginRight="3dp"
                android:textColor="#ff6"/>

            <TextView
                android:id="@+id/mytimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="오후 2:13"/>
        </LinearLayout>





            <TextView
                android:padding="3dp"
                android:id="@+id/myCommentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕안녕"
                android:textColor="#000000"
                android:background="#ff6"
               />



    </LinearLayout>
    </FrameLayout>


</LinearLayout>