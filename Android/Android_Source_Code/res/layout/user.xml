<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="교수"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="컴퓨터 공학"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_circle_blue_24dp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#404040"
                    android:id="@+id/usergradeTextView"
                    android:layout_marginStart="30dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학년"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#404040"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#404040"
                    android:text="20152055"
                    android:id="@+id/useridTextView"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#404040"
                    android:text="박준성"
                    android:id="@+id/usernameTextView"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#404040"
                    android:text="박준성"
                    android:id="@+id/useridentityTextView"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#404040"
                    android:text="박준성"
                    android:id="@+id/userphonenumTextView"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    />


            </LinearLayout>
            <!--
            <ImageView
                android:id="@+id/usermanagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/menuImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more_gray_24dp"
                android:layout_gravity="center"
                />
                -->
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingBottom="5dp"
            >
            <TextView
                android:background="@drawable/imageview"
                android:id="@+id/call"
                android:layout_marginTop="5dp"
                android:layout_marginRight="1dp"
                android:drawableLeft="@drawable/ic_phone_gray_24dp"
                android:gravity="center"
                android:text=" 전화 문의"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_gravity="center"
                android:background="@drawable/imageview"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_textsms_gray_24dp"
                android:text=" 채팅 문의"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>